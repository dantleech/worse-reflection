{
    "name": "phpactor/worse-reflection",
    "description": "Lazy AST reflector that is much worse than better",
    "license": "MIT",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Daniel Leech",
            "email": "daniel@dantleech.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "microsoft/tolerant-php-parser": "~0.0",
        "jetbrains/phpstorm-stubs": "*",
        "psr/log": "^1.0",
        "phpactor/docblock": "~0.2",
        "phpactor/text-document": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "symfony/filesystem": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpbench/phpbench": "^0.16.0",
        "phpactor/class-to-file": "~0.1",
        "phpstan/phpstan": "~0.11.0",
        "phpactor/test-utils": "@dev"
    },
    "autoload": {
        "psr-4": {
            "Phpactor\\WorseReflection\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpactor\\WorseReflection\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    },
    "scripts": {
        "integrate": [
            "./vendor/bin/php-cs-fixer fix",
            "./vendor/bin/phpstan analyse lib -c phpstan.neon",
            "./vendor/bin/phpunit",
            "./vendor/bin/phpbench run --iterations=1",
            "./tests/Smoke/smoke_test.php --limit=100"
        ]
    }
}
